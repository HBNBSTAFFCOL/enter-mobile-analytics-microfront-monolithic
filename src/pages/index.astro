---
import Layout from "../layouts/Layout.astro";
import Header from "../components/header/ui/Header.component.astro";
import Button from "../components/button/ui/Button.component.astro";
---

<Layout title="ENTER.CO MOBILE">
    <main>
        <Header />

        <nav class="brands_container">
            <Button
                type="brands-navigation"
                id="button-brands-navigation-Apple"
                icon="public/icons/icon-Apple.svg"
            />
        </nav>

        <div class="price-filter-container">
            <input
                type="number"
                id="min-price"
                name="min-price"
                placeholder="Mínimo"
            />

            <input
                type="number"
                id="max-price"
                name="max-price"
                placeholder="Máximo"
            />
            <button type="button" class="price-filter-button">Aplicar</button>
        </div>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: unset;
        width: unset;
        max-width: unset;
    }
</style>
