                    placeholder="Mínimo"
                    min="39000"
                    max="1200000"
                    step="1000"
                />

                <span class="separator">-</span>

                <input
                    id="max-price-input"
                    type="text"
                    class="price-input"
                    name="price-filter-max"
                    placeholder="Máximo"
                    min="39000"
                    max="1200000"
                    step="1000"
