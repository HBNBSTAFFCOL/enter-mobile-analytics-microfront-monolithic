---
import Layout from "../layouts/Layout.astro";
import Header from "../components/header/ui/Header.component.astro";
import Button from "../components/button/ui/Button.component.astro";
import Card from "../components/card-detail/ui/Card.component.astro";
---

<Layout title="ENTER.CO MOBILE">
	<main>
		<Header />
		
		<nav class="brands_filters">


            <Button
                type="filters-navigation"
                id="button-filters-navigation-camara"
                icon=""
                text="Camara"
                detail="Selfie 100 MPX / Main Camara 200 MPX"
            />
            <Button
                type="filters-navigation"
                id="button-filters-navigation-battery"
                icon=""
                text="Bateria"
                detail="1000 MHP"
            />
            <Button
                type="filters-navigation"
                id="button-filters-navigation-screen"
                icon=""
                text="Pantalla"
                detail="7 Pulgadas"
            />
            <Button
                type="filters-navigation"
                id="button-filters-navigation-memory"
                icon=""
                text="Memoria"
                detail="8 RAM / 256 GB ALMACENAMIENTO"
            />
        </nav>
		
		<article class="filters__battery-modal" id="battery-modal">
			<section>
				<h3>Bateria</h3>
				<label for="filters__battery--mAh-range"></label>
				<input
					type="range"
					id="filters__battery--mAh-range"
					name="mAhRange"
					min="2"
					max="150"
					step="1"
					value="50"
				/>
			</section>
		</article>
		<section>
			<ul class="slide__cards">
				<Card
					title="Iphone 15 Pro Max"
					cameraResolution="48MP"
					internalMemory="256GB | 512GB | 1TB"
					ramMemory="8GB"
					batteryCapacity="4441mAh"
					colors={[
						{
							color: "#f7f4ed",
							src: "/phone_images/Apple/iphone15ProMax-White.png",
						},
						{
							color: "#97968d",
							src: "/phone_images/Apple/Iphone15ProMax-Natural.png",
						},
						{
							color: "#585f6f",
							src: "/phone_images/Apple/iphone15ProMax-Blue.png",
						},
						{
							color: "#545454",
							src: "/phone_images/Apple/iphone15ProMax-Black.png",
						},
					]}
					src="/phone_images/Apple/iphone15ProMax-White.png"
				/>
				<Card
					title=" Xiaomi 14 Ultra"
					cameraResolution="50MP"
					internalMemory="256GB | 512GB | 1TB"
					ramMemory="12GB | 16GB "
					batteryCapacity="5000mAh"
					colors={[
						{
							color: "#DEDEE0",
							src: "public/phone_images/Xiaomi/Xiaomi14Ultra-White.png",
						},
						{
							color: "#2A2A2C",
							src: "public/phone_images/Xiaomi/Xiaomi14Ultra-Black.png",
						},
					]}
					src="public/phone_images/Xiaomi/Xiaomi14Ultra-White.png"
				/>
				<Card
					title="Samsung Galaxy S23 Ultra"
					cameraResolution="200MP"
					internalMemory="256GB | 512GB | 1TB"
					ramMemory="8GB | 12GB "
					batteryCapacity="5000mAh"
					colors={[
						{
							color: "#F1EAE0",
							src: "public/phone_images/samsung/SamsungS23Ultra-White.png",
						},
						{
							color: "#D4C7D9",
							src: "public/phone_images/samsung/SamsungS23Ultra-Pink.png",
						},
						{
							color: "#5E645A",
							src: "public/phone_images/samsung/SamsungS23Ultra-Green.png",
						},
						{
							color: "#211E15",
							src: "public/phone_images/samsung/SamsungS23Ultra-Black.png",
						},
					]}
					src="public/phone_images/samsung/SamsungS23Ultra-White.png"
				/>
				<Card
					title="Huawei P60 Pro"
					cameraResolution="50MP"
					internalMemory="256GB | 512GB | 1TB"
					ramMemory="12GB "
					batteryCapacity="5000mAh"
					colors={[
						{
							color: "#EAE8E9",
							src: "public/phone_images/Huawei/HuaweiP60Pro-White.png",
						},
						{
							color: "#BFB2D6",
							src: "public/phone_images/Huawei/HuaweiP60Pro-Pink.png",
						},
						{
							color: "#2D3E34",
							src: "public/phone_images/Huawei/HuaweiP60Pro-Green.png",
						},
						{
							color: "#1E1E20",
							src: "public/phone_images/Huawei/HuaweiP60Pro-Black.png",
						},
					]}
					src="public/phone_images/Huawei/HuaweiP60Pro-White.png"
				/>
			</ul>
		</section>
	</main>
</Layout>

<style>
	 main {
        margin: auto;
        padding: unset;
        width: unset;
        max-width: unset;
        .price-filter {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }
    }

    .container-price {
    margin-top: 20px;
    display: flex;
    justify-content: center; /* Centrar horizontalmente */
    align-items: center; /* Centrar verticalmente */
}

.price-filter-container {
    display: flex;
    align-items: center;
}

.price-input {
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 5px;
    width: 150px;
}

.separator {
    margin: 0 10px;
    font-size: 20px;
}


.slide__cards {
		white-space: nowrap;
		overflow-x: auto;
		scroll-snap-type: x mandatory;
	}

</style>
