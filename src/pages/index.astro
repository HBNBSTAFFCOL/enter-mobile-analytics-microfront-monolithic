---
import Layout from "../layouts/Layout.astro";
import Header from "../components/header/ui/Header.component.astro";
import Card from "../components/card-detail/ui/Card.component.astro";
import Button from "../components/button/ui/Button.component.astro";
---

<Layout title="ENTER.CO MOBILE">
	<main>
        <Header />

        <nav class="brands_container">
            <li>
                <Button
                    type="brands-navigation"
                    id="/icons-brands/icon-Apple.svg"
                    icon="/icons-brands/icon-Apple.svg"
                />
            </li>
        </nav>
        <section class="container-price">
            <div class="price-filter-container">
                <input
                    id="min-price-input"
                    type="text"
                    class="price-input"
                    name="price-filter-min"
                    placeholder="Mínimo"
                    min="39000"
                    max="1200000"
                    step="1000"
                />

                <span class="separator">-</span>

                <input
                    id="max-price-input"
                    type="text"
                    class="price-input"
                    name="price-filter-max"
                    placeholder="Máximo"
                    min="39000"
                    max="1200000"
                    step="1000"
                />
            </div>
        </section>
        <section>
			<ul class="slide__cards">
					<Card
						title="Iphone 15 Pro Max"
						cameraResolution="48MP"
						internalMemory="256GB | 512GB | 1TB"
						ramMemory="8GB"
						batteryCapacity="4441mAh"
						colors={[{color:"#f7f4ed", src:"public/phone_images/Apple/iphone15ProMax-White.png"}, {color:"#97968d", src:"public/phone_images/Apple/Iphone15ProMax-Natural.png"}, {color:"#585f6f", src:"public/phone_images/Apple/iphone15ProMax-Blue.png" },{color:"#545454", src:"public/phone_images/Apple/iphone15ProMax-Black.png"}]}
						src="/phone_images/Apple/iphone15ProMax-White.png"
					> 
					</Card>
					<Card
						title=" Xiaomi 14 Ultra"
						cameraResolution="50MP"
						internalMemory="256GB | 512GB | 1TB"
						ramMemory="12GB | 16GB "
						batteryCapacity="5000mAh"
						colors={[{color:"#DEDEE0", src:"public/phone_images/Xiaomi/Xiaomi14Ultra-White.png"}, {color:"#2A2A2C", src:"public/phone_images/Xiaomi/Xiaomi14Ultra-Black.png" }]}
						src="public/phone_images/Xiaomi/Xiaomi14Ultra-White.png"
					>
					</Card>
					<Card
						title="Samsung Galaxy S23 Ultra"
						cameraResolution="200MP"
						internalMemory="256GB | 512GB | 1TB"
						ramMemory="8GB | 12GB "
						batteryCapacity="5000mAh"
						colors={[{color:"#F1EAE0", src:"public/phone_images/samsung/SamsungS23Ultra-White.png"}, {color:"#D4C7D9", src:"public/phone_images/samsung/SamsungS23Ultra-Pink.png" }, {color:"#5E645A", src:"public/phone_images/samsung/SamsungS23Ultra-Green.png"},{color:"#211E15", src:"public/phone_images/samsung/SamsungS23Ultra-Black.png"}]}
						src="public/phone_images/samsung/SamsungS23Ultra-White.png"
					>
					</Card>
					<Card
						title="Huawei P60 Pro"
						cameraResolution="50MP"
						internalMemory="256GB | 512GB | 1TB"
						ramMemory="12GB "
						batteryCapacity="5000mAh"
						colors={[{color:"#EAE8E9", src:"public/phone_images/Huawei/HuaweiP60Pro-White.png"}, {color:"#BFB2D6", src:"public/phone_images/Huawei/HuaweiP60Pro-Pink.png" }, {color:"#2D3E34", src:"public/phone_images/Huawei/HuaweiP60Pro-Green.png"},{color:"#1E1E20", src:"public/phone_images/Huawei/HuaweiP60Pro-Black.png"}]}
						src="public/phone_images/Huawei/HuaweiP60Pro-White.png"
					>
					</Card>
			</ul>
		</section>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: unset;
		width: unset;
		max-width: unset;
        .price-filter {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }
	}
    .container-price {
    margin-top: 20px;
    display: flex;
    justify-content: center; /* Centrar horizontalmente */
    align-items: center; /* Centrar verticalmente */
}

.price-filter-container {
    display: flex;
    align-items: center;
}

.price-input {
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 5px;
    width: 150px;
}

.separator {
    margin: 0 10px;
    font-size: 20px;
}



.slide__cards {
	white-space: nowrap;
	overflow-x: auto;
	scroll-snap-type: x mandatory;
}
</style>

